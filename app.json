{
  "expo": {
    "name": "Prayer Journal",
    "slug": "prayer-journal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "infoPlist": {
        "UIKeyboardDismissModeOnDrag": "YES",
        "UIKeyboardWillShowNotification": true
      },
      "supportsTablet": true,
      "bundleIdentifier": "com.sinaiglobal.prayerjournal",
      "buildNumber": "1.0.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.prayerjournal.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "prayer-journal",
    "plugins": [
      "expo-router",
      "expo-font",
      ["expo-av", {
        "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone"
      }]
    ]
      }
}
